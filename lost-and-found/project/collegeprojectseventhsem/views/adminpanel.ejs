    .link-admin-updates {
      text-align: center;
    }
    
    .link-admin-updates button {
      font-size: 1.2rem;
    }
    
    .admin-update-form {
      width: fit-content;
      margin : 0 auto 0 auto;
    }
    
    .admin-update-form a {
      color : #fff;
