<body>
  <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
    <a class="navbar-brand" href="#"><img src="logo1.png" width="50px" alt=""></a>
    
      <ul class="navbar-nav ml-auto">
        <li class="nav-item">
          <a href="/logout" class="btn btn-danger">Log out</a>
          </li>
      </ul>
     
    </div>
  </nav>
    <div class="jumbotron jumbotron-fluid mb-0">
        <div class="container">
          <h1 class="display-4">Admin Dashboard</h1>
          <p class="lead">Using it you can manage items like add and remove</p>
        </div>
      </div>
      <div class="container-fluid admin-container">
       
        <div class="row">
          <div class="col-md-4 admin-nav link-admin-updates">
            <button type="button" class="btn btn-danger" data-toggle="modal" data-target="#Additemmodal">Add Item</button>
          </div>
          <div class="col-md-4 admin-nav link-admin-updates">
            <button type="button" class="btn btn-danger" data-toggle="modal" data-target="#exampleModal">Remove Item</button>
          </div>
          <div class="col-md-4 admin-nav form-col">
            <form action="" class="form-inline admin-update-form">
              <div class="form-group">
                <input type="text" class="form-control mr-4" id="searchitem" placeholder="Search Items">       
              </div>
              <div class="form-group">
                <input type="submit" class="btn btn-primary" value="Search"> 
              </div>
            </form>
          </div>
        </div>
      </div>

      <div class="modal fade" id="Additemmodal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog">
          <div class="modal-content">
            <div class="modal-header">
              <h5 class="modal-title" id="exampleModalLabel">Add Item</h5>
              <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
              </button>
            </div>
            <div class="modal-body">
              <form action="/additem" method="post">
                <div class="form-group">
                  <label for="terminal">Choose Terminal</label>
                  <select name="terminal" class="form-control">
                    <option>T1</option>
                    <option>T2</option>
                    <option>T3</option>
                  </select>
                </div>
                <div class="form-group">
                  <label for="category">Item Category</label>
                  <select name="itemcategory" class="form-control">
                    <option>Curreny</option>
                    <option>Electronic Devices</option>
                    <option>General Items</option>
                    <option>Laptop</option>
                    <option>Luggage</option>
                  </select>
                </div>
                <div class="form-group">
                  <label for="item-date">Date</label>
                  <input type="date" name="lostdate" class="form-control" id="itemdate">
                </div>
                <div class="form-group">
                  <label for="item-details">Item Details</label>
                  <textarea class="form-control" id="itemdetail" name="detailitem" rows="5">
                  </textarea>
                </div>
                <button type="submit" class="btn btn-primary">Add</button>
              </form>
            </div>
            <div class="modal-footer">
              <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
            </div>
          </div>
        </div>
      </div>

      <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog">
          <div class="modal-content">
            <div class="modal-header">
              <h5 class="modal-title" id="exampleModalLabel">Remove Item</h5>
              <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
              </button>
            </div>
            <div class="modal-body">
              <form action="/removeitem" method="post">
                <div class="form-group">
                  <label for="removedate">Item Date</label>
                  <input type="date" name="dateofadd" class="form-control" id="exampleInputitemid1">
                </div>
                <button type="submit" class="btn btn-primary">Remove</button>
              </form>
            </div>
            <div class="modal-footer">
              <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
            </div>
          </div>
        </div>
      </div>
